{
  "version": "0.2.0",
   "configurations": [
     {
       "type": "node",
       "request": "launch",
       "name": "jest",
       "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/jest",
       "runtimeArgs": ["--runInBand", "-t", "testName"],
       "sourceMaps": true,
       "cwd": "${workspaceRoot}",
       "console": "integratedTerminal",
       "protocol": "inspector"
     },
     {
       "type": "node",
       "request": "launch",
       "name": "Debug Nest Framework",
       "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nest",
       "runtimeArgs": ["start", "--watch"],
       "program": "${workspaceFolder}/src/main.ts",
       "sourceMaps": true,
       "cwd": "${workspaceRoot}",
       "console": "integratedTerminal",
       "protocol": "inspector"
     }
   ]
 }